<p id="notice"><%= notice %></p>

<h1>Discussions</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>By</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @discussions.each do |discussion| %>
      <tr>
        <td><%= discussion.title %></td>
        <td><%= discussion.account.email %></td>
        <td><%= link_to 'Show', discussion,:class=>"btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_discussion_path(discussion) ,:class=>"btn btn-warning" if  session[:account]==discussion.account.id %></td>
        <td><%= link_to 'Destroy', discussion, method: :delete, data: { confirm: 'Are you sure?' } ,:class=>"btn btn-danger"  if  session[:account]==discussion.account.id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Discussion', new_discussion_path, :class=>"btn btn-success"  if   !session[:account].nil? %>
